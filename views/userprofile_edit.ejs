<% include ./partials/header %>



<div class = "row">
        
<div class = "center_items">
<h1 class = "mb-4">Edit User Profile</h1>

<form action = "/users/<%= user._id %>?_method=PUT" method = "POST" enctype = "multipart/form-data">


	<div class = "form-group">
		<label for = "username">Username</label>
		<input class="form-control"  type = "text" name = "username" value = "<%= user.username %>" disabled>
	</div>


	<div class = "form-group">
		<label for = "profilepic">Profile Picture</label>
		<input type = "file" id="image" name = "profilepic" accept = "image/*" required>
	</div>

	<div class = "form-group">
		<label for = "bio">Biography</label>
		<textarea class="form-control"  name="bio" maxlength="50"><%=user.bio%></textarea>
	</div>

    <button class = "btn btn-outline-dark btn-light">Finish Editing</button>

</form>


</div>

</div>

<% include ./partials/footer %>