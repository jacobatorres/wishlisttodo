				},

				list_origin: {
					id: "<%= list._id %>",
					name: "<%= list.name %>"
				},

				reserved_by: {
					id: "<%= currentUser._id %>",
					username: "<%= currentUser.username %>"
				},

				event_date: "<%= list.event_date %>",
				event_date_df: "<%= list.event_date_df %>"

			};

			console.log(data);
			$.ajax({
				type: 'POST',
