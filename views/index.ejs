<% include ./partials/header %>




    <section id="blog" class="py-3">
      <div class="container">
      	<h1>WishLists</h1>
		<button class = "btn btn-link mb-4" ><a href = "/lists/new" style= "text-decoration: underline; color: #43A4BC;" >Make a new list</a></button>

        <div class="row">
          <div class="col">
            <div class="card-columns">

				<% lists.forEach(function(list){ %>

		              <div class="card">

		              	<a href = "/lists/<%=list._id %>" style= "color: black;">
		                <img
		                  src="<%= list.image%>"
		                  alt=""
		                  class="img-fluid card-img-top"
		                />  
		                <div class="card-body">
		                  <h4 class="card-title">
		                    <%= list.name %>
		                  </h4>
		              	</a>

<!-- 		                  <small class="text-muted">Written by jacob</small>
		                  <hr />
 -->		                  <p class="card-text">
		                    <%= list.description %>
		                  </p>
		                </div>

		              </div>

				<% })%> 



              </div>
            </div>
          </div>
        </div>
    </section>

<% include ./partials/footer %>